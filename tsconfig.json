{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",  // âœ… keep this for Expo projects
    "baseUrl": ".",
    "paths": {
      "@env": ["env.d.ts"],
      "@/*": ["./*"]
    },
    "allowImportingTsExtensions": true,
    "jsx": "react-native",
    "lib": ["DOM", "ESNext"],
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "types": ["react", "react-native"]
  },
  "exclude": ["node_modules"]
}
